#!/bin/bash

# export PS1="\w> "
export PS1="\[$(tput bold)\]\[$(tput setaf 1)\]\h:\w> \[$(tput setaf 7)\]\[$(tput sgr0)\]"
alias ls='ls -F'
alias ll='ls -lFh'
alias la='ls -alFh'

alias gits='git status -s'
alias gitb='git branch'
alias gitc='git checkout'
alias gitgr='git log -15 --oneline --graph --decorate'
alias be='bundle exec'

alias cwm=/usr/local/cwm/cwm-1.2.1/cwm
alias pellet=/usr/local/pellet/pellet-2.3.0/pellet.sh

alias mongod='/usr/share/mongodb-osx-x86_64-2.0.3/bin/mongod --dbpath /usr/share/data/db'
alias mongo='/usr/share/mongodb-osx-x86_64-2.0.3/bin/mongo'

export CLICOLOR=exfxcxdxbxegedabagacad
export PATH=$PATH:/usr/local/git/bin export PATH=$PATH:$HOME/.rvm/bin # Add RVM to PATH for scripting 
# The End
